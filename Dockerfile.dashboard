FROM python:3.10-slim

WORKDIR /app

# Install dependencies
RUN pip install --no-cache-dir \
    fastapi==0.110.0 \
    uvicorn[standard]==0.29.0 \
    aiohttp==3.9.3 \
    jinja2==3.1.3 \
    aiofiles==23.2.1

# Copy dashboard files
COPY dashboard/ /app/dashboard/

# Expose port
EXPOSE 8080

# Run the dashboard
CMD ["python", "dashboard/app.py"]